{
  "name": "devise",
  "version": "0.1.0",
  "description": "A tool for creating great game documentation.",
  "main": "client/index.js",
  "scripts": {
    "build": "webpack --config build/webpack.prod.js",
    "dev": "node build/server.js",
    "test": "run-p test:*",
    "test:e2e": "testcafe all test/e2e/index.js --app \"npm run dev\" --app-init-delay 10000",
    "test:lint": "xo **/client/**/*.{vue,js} !node_modules/**",
    "test:type": "flow",
    "test:unit": "jest --coverage"
  },
  "author": "Graham Barber <grahambarber@gmail.com>",
  "license": "Apache-2.0",
  "xo": {
    "extends": "./.eslintrc",
    "esnext": true,
    "envs": [
      "browser"
    ]
  },
  "babel": {
    "presets": [
      [
        "vue-app",
        {
          "useBuiltIns": true
        }
      ]
    ],
    "plugins": [
      "transform-flow-strip-types"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-nested": {}
    }
  },
  "browserslist": [
    "last 2 versions",
    "ie > 8"
  ],
  "dependencies": {
    "babel-runtime": "^6.18.0",
    "promise-polyfill": "^6.0.2",
    "vue": "^2.2.0",
    "vue-router": "^2.0.0",
    "vuex": "^2.0.0",
    "vuex-router-sync": "^4.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.4.0",
    "babel-core": "^6.16.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-vue-app": "^1.1.1",
    "chalk": "^1.1.3",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^2.0.0",
    "css-loader": "^0.23.1",
    "eslint": "^4.1.1",
    "eslint-config-vue": "latest",
    "eslint-plugin-flowtype": "^2.34.1",
    "eslint-plugin-testcafe": "^0.2.0",
    "eslint-plugin-vue": "latest",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^2.0.0-rc.3",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.49.1",
    "friendly-errors-webpack-plugin": "^1.1.2",
    "html-webpack-plugin": "^2.22.0",
    "husky": "^0.14.2",
    "jest": "^20.0.4",
    "npm-run-all": "^4.0.2",
    "offline-plugin": "^4.5.3",
    "postcss-loader": "^0.9.1",
    "postcss-nested": "^1.0.0",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.1",
    "style-loader": "^0.13.1",
    "testcafe": "^0.12.1",
    "testcafe-browser-provider-nightmare": "^0.0.4",
    "vue-loader": "^11.0.0",
    "vue-template-compiler": "^2.2.0",
    "webpack": "2.2.0",
    "webpack-dev-middleware": "^1.8.1",
    "webpack-hot-middleware": "^2.12.2",
    "xo": "^0.18.0"
  }
}
